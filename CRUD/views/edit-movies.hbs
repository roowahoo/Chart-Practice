{{#extends 'base'}}
{{#block 'content'}}
<h1>Editing {{movieToEdit.title}} </h1>
<form method="POST">
    <div>
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control" value="{{movieToEdit.title}}"/>
    </div>
    <div>
        <label class="form-label">Plot</label>
        <input type="text" name="plot" class="form-control" value="{{movieToEdit.plot}}">
    </div>
    <input type="submit" class="mt-3 btn btn-primary"/>
</form>
{{/block}}
{{/extends}}